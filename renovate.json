{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "registryAliases": {
    "vultr-repo": "fra.vultrcr.com"
  },
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["fra.vultrcr.com/metrodelay/caddy"],
      "replacementName": "caddy"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["fra.vultrcr.com/metrodelay/grafana"],
      "replacementName": "grafana/grafana"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["fra.vultrcr.com/metrodelay/loki"],
      "replacementName": "grafana/loki"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["fra.vultrcr.com/metrodelay/prometheus"],
      "replacementName": "prom/prometheus"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["fra.vultrcr.com/metrodelay/node-exporter"],
      "replacementName": "prom/node-exporter"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["fra.vultrcr.com/metrodelay/alloy"],
      "replacementName": "grafana/alloy"
    },
    {
      "description": "Disable all other internal images that aren't explicitly mapped above",
      "matchPackageNames": [
        "fra.vultrcr.com/metrodelay/**",
        "metrodelay/**"
      ],
      "excludePackageNames": [
        "fra.vultrcr.com/metrodelay/caddy",
        "fra.vultrcr.com/metrodelay/grafana",
        "fra.vultrcr.com/metrodelay/loki",
        "fra.vultrcr.com/metrodelay/prometheus",
        "fra.vultrcr.com/metrodelay/node-exporter",
        "fra.vultrcr.com/metrodelay/alloy"
      ],
      "enabled": false
    },
    {
      "matchDatasources": ["maven"],
      "matchPackageNames": ["^app\\.metrodelay"],
      "enabled": false
    }
  ]
}
