{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "registryAliases": {
    "vultr-repo": "fra.vultrcr.com" 
  },
  "packageRules": [
    {
      "matchPackageNames": ["fra.vultrcr.com/metrodelay/caddy"],
      "packageName": "caddy",
      "datasource": "docker"
    },
    {
      "matchPackageNames": ["ra.vultrcr.com/metrodelay/grafana"],
      "packageName": "grafana/grafana",
      "datasource": "docker"
    },
    {
      "matchPackageNames": ["fra.vultrcr.com/metrodelay/loki"],
      "packageName": "grafana/loki",
      "datasource": "docker"
    },
    {
      "matchPackageNames": ["fra.vultrcr.com/metrodelay/prometheus"],
      "packageName": "prom/prometheus",
      "datasource": "docker"
    },
    {
      "matchPackageNames": ["fra.vultrcr.com/metrodelay/node-exporter"],
      "packageName": "prom/node-exporter",
      "datasource": "docker"
    },
    {
      "matchPackageNames": ["fra.vultrcr.com/metrodelay/alloy"],
      "packageName": "grafana/alloy",
      "datasource": "docker"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "enabled": false,
      "description": "Exclude vultrcr.com metrodelay images due to inaccessibility.",
      "matchPackageNames": [
        "fra.vultrcr.com/metrodelay/{/,}**",
        "metrodelay/{/,}**"
      ]
    },
    {
      "matchDatasources": [
        "maven"
      ],
      "enabled": false,
      "description": "Exclude all internal app.metrodelay maven packages from Renovate updates.",
      "matchPackageNames": [
        "^app\\.metrodelay"
      ]
    }
  ]
}
