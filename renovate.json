{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "enabled": false,
      "description": "Exclude vultrcr.com metrodelay images due to inaccessibility.",
      "matchPackageNames": [
        "ewr.vultrcr.com/metrodelay/{/,}**"
      ]
    },
    {
      "matchDatasources": [
        "maven"
      ],
      "enabled": false,
      "description": "Exclude all internal app.metrodelay maven packages from Renovate updates.",
      "matchPackageNames": [
        "//^app\\.metrodelay//"
      ]
    }
  ]
}
